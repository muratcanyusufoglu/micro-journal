{
  "expo": {
    "name": "OneLine",
    "slug": "OneLine",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/dailyicon.png",
    "scheme": "oneline",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Private, offline-first daily journal with mood tracking. Write thoughts, record voice notes, attach photos. All data stays on your device. No accounts, no ads, completely free. Export to Notion, Obsidian & more.",
    "keywords": [
      "journal",
      "diary",
      "notes",
      "mood",
      "tracker",
      "privacy",
      "offline",
      "writing",
      "memories",
      "reflection",
      "wellness",
      "mental health",
      "personal",
      "secure",
      "local",
      "export"
    ],
    "splash": {
      "image": "./assets/images/dailysplash.png",
      "resizeMode": "cover",
      "backgroundColor": "#F7F6F3"
    },
    "ios": {
      "buildNumber": "3",
      "bundleIdentifier": "com.oneline.dailynotes",
      "supportsTablet": true,
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.oneline.dailynotes"
        ]
      },
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "OneLine needs access to your photo library to attach photos to your journal entries.",
        "NSPhotoLibraryAddUsageDescription": "OneLine needs permission to save photos to your library.",
        "NSMicrophoneUsageDescription": "OneLine needs access to your microphone to record voice notes for your journal entries.",
        "NSCameraUsageDescription": "OneLine needs access to your camera to take photos for your journal entries."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.oneline.dailynotes",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.SEND",
          "category": ["android.intent.category.DEFAULT"],
          "data": [
            {
              "mimeType": "text/plain"
            },
            {
              "mimeType": "image/*"
            }
          ]
        },
        {
          "action": "android.intent.action.SEND_MULTIPLE",
          "category": ["android.intent.category.DEFAULT"],
          "data": [
            {
              "mimeType": "image/*"
            }
          ]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/dailysplash.png",
          "resizeMode": "cover",
          "imageWidth": 706,
          "backgroundColor": "#F7F6F3",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-sqlite",
      "./plugins/withShareExtension.js"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
